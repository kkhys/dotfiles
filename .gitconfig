[core]
	quotepath = false
	autocrlf = input
	ignorecase = false

[color]
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	grep = auto
	ui = auto

[alias]
	d = diff
	co = checkout
	ci = commit
	ca = commit -a
	ps = "!git push origin $(git rev-parse --abbrev-ref HEAD)"
	pl = "!git pull origin $(git rev-parse --abbrev-ref HEAD)"
	st = status
	br = branch
	ba = branch -a
	bm = branch --merged
	bn = branch --no-merged
	open = "!gh repo view --web"

[credential]
	helper = osxkeychain

[push]
	default = current

[pull]
	ff = only
	rebase = false

[merge]
	ff = false

[gpg]
	program = /opt/homebrew/bin/gpg

[commit]
	gpgsign = true

[url "https://"]
	insteadOf = git://

